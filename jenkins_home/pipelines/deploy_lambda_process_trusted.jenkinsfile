pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/TimeSync-Grupo-07/Lambda_functions-Python.git'
        BRANCH = 'Dev'
        LAMBDA_FUNCTION_NAME = 'timesync-process-trusted-function'
        ZIP_FILE = 'lambda_backup.zip'
        WORK_DIR = 'timesync-process-trusted-function'
    }

    stages {

        stage('üß≠ Checkout do reposit√≥rio') {
            steps {
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('üì¶ Compactar fun√ß√£o Lambda') {
            steps {
                dir("${WORK_DIR}") {
                    // Cria o ZIP sem incluir a pasta raiz
                    sh """
                        rm -f ../${ZIP_FILE}
                        zip -r ../${ZIP_FILE} ./*
                    """
                }
            }
        }

        stage('üöÄ Deploy na AWS Lambda') {
            steps {
                sh """
                    echo "‚û°Ô∏è Atualizando fun√ß√£o Lambda: ${LAMBDA_FUNCTION_NAME}"
                    aws lambda update-function-code \
                        --function-name ${LAMBDA_FUNCTION_NAME} \
                        --zip-file fileb://${ZIP_FILE} \
                        --publish
                """
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deploy conclu√≠do com sucesso para ${LAMBDA_FUNCTION_NAME}"
        }
        failure {
            echo "‚ùå Falha no deploy. Verifique os logs acima."
        }
    }
}
